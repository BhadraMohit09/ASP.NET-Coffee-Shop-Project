@model ProductModel

<main id="main" class="main">
    <form method="post" asp-action="SaveProduct" asp-controller="Product">
        @Html.HiddenFor(x => x.ProductID)

        <div class="container">
            <h2 class="text-center">Product Details</h2>
            <div class="form-group">
                <label><span class="text-danger">*</span>Product Name</label>
                <input type="text" class="form-control" asp-for="ProductName"/>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label><span class="text-danger">*</span>Price</label>
                <input type="text" class="form-control" asp-for="ProductPrice"/>
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label><span class="text-danger">*</span>Product Code</label>
                <input type="number" class="form-control" asp-for="ProductCode"/>
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label><span class="text-danger">*</span>Description</label>
                <input type="text" class="form-control" asp-for="Description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label><span class="text-danger">*</span>UserID</label>
                <div class="dropdown">
                    <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                        <option value="">Select User</option>
                    </select>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div>
                <button type="submit" class="btn btn-primary px-5">Submit</button>
            </div>
        </div>
    </form>
</main>


@section Scripts 
{
 
        @{
            await Html.RenderPartialAsync("_validationscriptspartial");
        } 
}