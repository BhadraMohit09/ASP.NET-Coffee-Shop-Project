@model BillsModel

<main id="main" class="main">
    @using (Html.BeginForm())
    {
        <h3 class="text-center">@Html.Label("Bill Details")</h3>

        <p><span class="text-danger">*</span>@Html.LabelFor(m => m.BillNumber, "Enter Bill #", new { @class = "fs-5" })</p>
        <p>@Html.TextBoxFor(m => m.BillNumber, "Bill Number", new { @class = "form-control w-75 p-2" })</p>

        <p><span class="text-danger">*</span>@Html.LabelFor(m => m.BillDate, "Enter Billing Date", new { @class = "fs-5" })</p>
        <p>@Html.TextBoxFor(m => m.BillDate, "Bill Date", new { @class = "form-control w-75 p-2" })</p>

        <p><span class="text-danger">*</span>@Html.LabelFor(m => m.OrderId, "Enter Order ID", new { @class = "fs-5" })</p>
        <p>@Html.DropDownListFor(m => m.OrderId, new SelectList(new[] { "1", "2", "3" }), "UserID", new { @class = "form-control w-25 p-2" })</p>


        <p><span class="text-danger">*</span>@Html.LabelFor(m => m.TotalAmount, "Enter Total Amount", new { @class = "fs-5" })</p>
        <p>@Html.TextBoxFor(m => m.TotalAmount, new { @class = "form-control w-75 p-2" })</p>


        <p><span class="text-danger">*</span>@Html.LabelFor(m => m.Discount, "Enter Discount", new {@class = "fs-5"})</p>
        <p>@Html.TextBoxFor(m => m.Discount, new { @class = "form-control w-75 p-2" })</p>

        <p><span class="text-danger">*</span>@Html.LabelFor(m => m.UserId, "Enter User ID", new { @class = "fs-5" })</p>
        <p>@Html.DropDownListFor(m => m.UserId, new SelectList(new[] { "1", "2", "3" }), "UserID", new { @class = "form-control w-25 p-2" })</p>
        <button class="btn btn-secondary w-25">Submit</button>
    }
</main>